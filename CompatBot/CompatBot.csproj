  </ItemGroup>

  <ItemGroup>
    <None Update="Properties\credentials.json" Condition="Exists('Properties\credentials.json')">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
